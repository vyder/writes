        <script>try{Typekit.load();}catch(e){}</script>
        <style type="text/css">
            body {
                margin: 0;
                padding: 0;
                font-family: "minion-pro-1","minion-pro-2",sans-serif;
                font-size: 19px;
            }
            div#container {
                margin-top: 30px;
                margin-left: 15%;
                margin-bottom: 60px;
                width: 35%;
            }
            .post > .title {
                font-weight: 700;
                font-size: 30px;
            }
            .post > .body {
                line-height: 1.5;
                text-align: justify;
            }
        </style>
